@model Models.Entity.Booking
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    List<Models.Entity.Customer> listCustomer = ViewBag.listCustomer;
    List<Models.Entity.Service> listServices = ViewBag.listServices;

}


<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Edit Booking
                        <span class="tools pull-right">
                        </span>
                    </header>
                    <div class="panel-body">
                        <div class="form">

                            @*<div class="form">*@

                            @*<form  method="get" action="" novalidate="novalidate">*@
                            @using (Html.BeginForm("Edit", "BookingAdmin", FormMethod.Post, new { @class = "cmxform form-horizontal", @id = "signupForm" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group ">
                                    <label class="control-label col-lg-3">Service</label>
                                    <div class="col-lg-6">
                                        <select id="IdServices" name="IdServices" class="form-control m-bot15">
                                            @foreach (var services in listServices)
                                            {
                                                <option value="@services.id">@services.name</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-3">Customer</label>
                                    <div class="col-lg-6">
                                        <select id="IdCustomer" name="IdCustomer" class="form-control m-bot15">
                                            @foreach (var customer in listCustomer)
                                            {
                                                <option value="@customer.id">@customer.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-3">Arrival Time</label>
                                    <div class="col-lg-6">
                                        @*<input class="form-control " id="username" name="username" type="text">*@
                                        @Html.ValidationMessageFor(model => model.ArrivalTime, "", new { @class = "text-danger" })
                                        <input required type="datetime-local" name="ArrivalTime" id="ArrivalTime" value="@Model.ArrivalTime.ToString("s")"  class = "form-control" min = "@DateTime.Now.ToString("s")" step="1"/>  
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-primary" type="submit">Save</button>
                                        <button class="btn btn-default" type="button">Cancel</button>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

